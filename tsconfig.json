{
    "files": ["src/app.ts"],
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "es2021",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "strict": true
    },
    "lib": ["es2015"],
    "exclude": ["node_modules", "dist", "build"],
    "include": ["**/*.ts"]
}
